{
  "name": "iobroker.synochat",
  "version": "1.4.0",
  "description": "This adapter provides an interface of Synology Chat and ioBroker.",
  "author": {
    "name": "phoeluga",
    "email": "phoeluga@gmail.com"
  },
  "homepage": "https://github.com/phoeluga/ioBroker.synochat",
  "license": "MIT",
  "keywords": [
    "Synology",
    "Chat",
    "message",
    "incoming",
    "outgoing",
    "channel",
    "ioBroker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/phoeluga/ioBroker.synochat"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "axios": "^0.27.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@eslint/js": "^9.17.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/adapter-react": "^2.0.22",
    "@iobroker/eslint-config": "^2.0.3",
    "@iobroker/testing": "^5.0.4",
    "@material-ui/core": "^4.12.4",
    "@tsconfig/node16": "^16.1.3",
    "@types/chai": "^5.0.1",
    "@types/chai-as-promised": "^8.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.123",
    "@types/proxyquire": "^1.3.31",
    "@types/react": "^17.0.83",
    "@types/react-dom": "^17.0.26",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^4.0.0",
    "chai": "^5.1.2",
    "chai-as-promised": "^8.0.1",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.3",
    "globals": "^15.14.0",
    "mocha": "^11.0.1",
    "proxyquire": "^2.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "prebuild": "rimraf admin/build",
    "build": "build-adapter react",
    "watch": "build-adapter react --watch",
    "prebuild:react": "rimraf admin/build",
    "build:react": "build-adapter react",
    "watch:react": "build-adapter react --watch",
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint -c eslint.config.mjs .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/phoeluga/ioBroker.synochat/issues"
  },
  "readmeFilename": "README.md"
}
